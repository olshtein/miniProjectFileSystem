<Window x:Class="FMS5774_8856_5366_WPF.RecordsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="RecordsWindow" Height="300" Width="300">
    <StackPanel Margin="0,1,0,-1">
        <StackPanel Name="RecordDetailsStackPanel">
            
        </StackPanel>
        
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content="First" Margin="3"/>
            <Button Content="Back" Margin="3"/>
            <Button Content="Go To:" Margin="3"/>
            <xctk:IntegerUpDown Name="GoToIntegerUpDown" Margin="3"/>
            <Button Content="Next" Margin="3" />
            <Button Content="Last" Margin="3"/>
        </StackPanel>
        <DockPanel>
            <Label Content="Current record:" DockPanel.Dock="Left"/>
            <TextBlock Name="CurrentSectorTextBlock" DockPanel.Dock="Left"/>
        </DockPanel>
    </StackPanel>
</Window>
