<UserControl x:Class="FMS5774_8856_5366_WPF.FileUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="99">
    <Grid Margin="0,0,0,0" >
        <Rectangle Stroke="Black" RadiusX="10" RadiusY ="10" Name="RectangleSidesCurved" RenderTransformOrigin="0.5,0.5">
            <Rectangle.Fill>
                <RadialGradientBrush RadiusY="0.8" RadiusX="0.6" SpreadMethod="Repeat">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFC7C1C1" Offset="1"/>
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Image HorizontalAlignment="Left" x:Name="imageIO" Height="90"  VerticalAlignment="Top" Width="96" Margin="4,0,0,0"/>
        <Label  x:Name="nameLabl" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="0,105,0,0" Width="100" HorizontalContentAlignment="Center" Height="15"/>

    </Grid>
</UserControl> 
