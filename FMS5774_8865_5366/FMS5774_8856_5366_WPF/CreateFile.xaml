<Window x:Class="FMS5774_8856_5366_WPF.CreateFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="CreateFile" Height="164.179" Width="300">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="record type" HorizontalAlignment="Left" Margin="3"/>
            <ComboBox HorizontalAlignment="Left" x:Name="typeRec" Margin="3" MinWidth="120"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Content="record amount" Margin="3"/>
            <xctk:IntegerUpDown Value="1" Margin="3" x:Name="numRec" Minimum="1"></xctk:IntegerUpDown>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <Label Content="record name" Margin="3"/>
            <TextBox MaxLength="10" Height="23" x:Name="nameRec" Margin="3" TextWrapping="Wrap" Text="" MinWidth="120"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="OK"  Margin="3" VerticalAlignment="Top" Width="75" Click="OK_Click"/>
            <Button Content="cancel" Margin="3" VerticalAlignment="Top" Width="75" Click="cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
