<Window x:Class="FMS5774_8856_5366_WPF.CreateFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="CreateFile" Height="300" Width="300">
    <Grid>
        <xctk:IntegerUpDown Margin="162,60,10,186" x:Name="numRec"></xctk:IntegerUpDown>
        <ComboBox HorizontalAlignment="Left" x:Name="typeRec" Margin="162,14,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" x:Name="nameRec" Margin="162,112,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="record type" HorizontalAlignment="Left" Margin="22,14,0,0" VerticalAlignment="Top" Width="72"/>
        <Label Content="record amount" HorizontalAlignment="Left" Margin="22,60,0,0" VerticalAlignment="Top"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="56,239,0,0" VerticalAlignment="Top" Width="75" Click="OK_Click"/>

        <Button Content="cancel" HorizontalAlignment="Left" Margin="181,239,0,0" VerticalAlignment="Top" Width="75" Click="cancel_Click"/>
        <Label Content="record name" HorizontalAlignment="Left" Margin="22,108,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
