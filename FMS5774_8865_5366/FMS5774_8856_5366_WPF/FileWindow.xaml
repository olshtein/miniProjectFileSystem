<Window x:Class="FMS5774_8856_5366_WPF.FileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FileWindow"  Height="350" Width="525" Closed="Window_Closed">

    <StackPanel>
        <Menu VerticalAlignment="Top" Height="21">
            <MenuItem Header="File">
                <MenuItem Header="[N]ew File" InputGestureText="Ctrl+N" Click="New_File_Click"/>
                <Separator/>
                <MenuItem Header="Exit" InputGestureText="Alt+F4"  Click="Exit_Click"/>
            </MenuItem>
        </Menu>

        <WrapPanel Name="FilesWrapPanel" Margin="3">
            <Button Name="CreateFileButton" Content="Create file" MinHeight="99" MaxWidth="120" Margin="3" Click="CreateFileButton_Click"/>
        </WrapPanel>
    </StackPanel>
</Window>
